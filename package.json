{
  "name": "linkedin",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "conta-problemi": "npm run typecheck && npm run lint",
    "pre-modifiche": "npm run conta-problemi",
    "post-modifiche": "npm run conta-problemi",
    "helper-manuali": "echo 'Esegui le correzioni manuali come da policy'",
    "start": "ts-node src/index.ts",
    "daemon:start": "pm2 start ecosystem.config.cjs --interpreter ./node_modules/.bin/ts-node",
    "daemon:stop": "pm2 stop linkedin-bot-daemon",
    "daemon:logs": "pm2 logs linkedin-bot-daemon",
    "daemon:status": "pm2 status",
    "dashboard": "ts-node src/index.ts dashboard",
    "kpi": "ts-node src/index.ts kpi",
    "ramp-up": "ts-node src/scripts/rampUp.ts",
    "db:backup": "ts-node src/scripts/backupDb.ts",
    "db:restore": "ts-node src/scripts/restoreDb.ts",
    "db:migrate": "ts-node scripts/migrate-to-postgres.ts",
    "docs": "typedoc --entryPointStrategy expand src --out docs --exclude '**/*.test.ts' --name 'LinkedIn Bot API'",
    "test:unit": "ts-node src/tests/unit.ts",
    "test:integration": "ts-node src/tests/integration.ts",
    "test:e2e:dry": "ts-node src/tests/e2eDry.ts",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e:dry"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@supabase/supabase-js": "^2.97.0",
    "cors": "^2.8.6",
    "csv-parser": "^3.2.0",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "pg": "^8.19.0",
    "playwright": "^1.58.2",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.3.0",
    "@types/pg": "^8.16.0",
    "@types/sqlite3": "^3.1.11",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "eslint": "^10.0.2",
    "pm2": "^6.0.14",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.17",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "node-gyp": "^11.5.0",
    "tar": "^7.5.8",
    "minimatch": "^10.2.2"
  }
}
